{
	"manifest_version": 3,
	"name": "Highlight Saver",
	"description": "Highlight text on any page and save it locally. View and manage highlights from the toolbar.",
	"version": "1.0.0",
	"permissions": ["storage", "activeTab", "scripting"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_title": "Saved Highlights",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"],
			"css": ["contentStyles.css"],
			"run_at": "document_idle"
		}
	]
}
